<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <com.shrikanthravi.customnavigationdrawer2.widget.SNavigationDrawer
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:navigationDrawerBackgroundColor="?attr/color_primary"
        app:appbarTitleTextColor="?attr/color_secondary"
        app:HamMenuIconTintColor="?attr/color_secondary"
        app:appbarColor="?attr/color_primary_dark"
        app:primaryMenuItemTextColor="#AA55"
        app:secondaryMenuItemTextColor="?attr/color_secondary"
        android:id="@+id/navigationDrawer">
        <FrameLayout
            android:background="?attr/color_primary"
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.shrikanthravi.customnavigationdrawer2.widget.SNavigationDrawer>

</android.support.constraint.ConstraintLayout>

